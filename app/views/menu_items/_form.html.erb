      <h2><%= pluralize(@menu_item.errors.count, "error") %> prohibited this menu_item from being saved:</h2>

      <ul>
      <% @menu_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :img_url %><br>
    <%= f.text_field :img_url %>
  </div>
  <div class="field">
    <%= f.label :views_count %><br>
    <%= f.number_field :views_count %>
  </div>
  <div class="field">
    <%= f.label :section_id %><br>
    <%= f.select :section_id, options_for_select(Section.all.map{|s|[s.name, s.id]}, @menu_item.section_id) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
